{
	"manifest_version": 3,
	"name": "Article Body Extractor",
	"description": "Extract the full body of news articles",
	"version": "1.0.0",
	"action": {
		"default_popup": "popup.html",
		"default_title": "React Boilerplate",
		"default_icon": "icon.png"
	},
	"permissions": ["activeTab", "scripting"],
	"icons": {
		"16": "icon.png",
		"48": "icon.png",
		"128": "icon.png"
	},
	"options_page": "options.html",
	"background": {
		"service_worker": "background.js"
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["contentScript.js"]
		}
	]
}
